<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Text?>

<VBox alignment="CENTER" prefHeight="300" prefWidth="300" spacing="10" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/11.0.1" fx:controller="com.javacademy.calc.Controller">
    
    
    <StackPane alignment="CENTER">
        <Rectangle fill="TRANSPARENT" height="50" stroke="GRAY" width="230" />
        <Text fx:id="output" />
    </StackPane>

    <HBox alignment="CENTER" spacing="10">
        <Button onAction="#processNumpad" prefWidth="40" text="7" />
        <Button onAction="#processNumpad" prefWidth="40" text="8" />
        <Button onAction="#processNumpad" prefWidth="40" text="9" />
        <Button onAction="#processOperator" prefWidth="40" text="/" />
        <Button onAction="#clear" prefWidth="40" text="C" />
    </HBox>
    
    <HBox alignment="CENTER" spacing="10">
        <Button onAction="#processNumpad" prefHeight="26.0" prefWidth="40.0" text="4" />
        <Button onAction="#processNumpad" prefHeight="26.0" prefWidth="40.0" text="5" />
        <Button onAction="#processNumpad" prefHeight="26.0" prefWidth="39.0" text="6" />
        <Button onAction="#processOperator" prefHeight="26.0" prefWidth="40.0" text="*" />
     </HBox>
     <HBox alignment="CENTER" spacing="10">
        <Button onAction="#processNumpad" prefWidth="50" text="1" />
        <Button onAction="#processNumpad" prefWidth="50" text="2" />
        <Button onAction="#processNumpad" prefWidth="50" text="3" />
        <Button onAction="#processOperator" prefWidth="50" text="-" />
    </HBox>
    
    <HBox alignment="CENTER" spacing="10">
        <Button onAction="#processNumpad" prefWidth="110" text="0" />
        <Button onAction="#processOperator" prefWidth="50" text="=" />
        <Button onAction="#processOperator" prefWidth="50" text="+" />
    </HBox>
    
</VBox>
